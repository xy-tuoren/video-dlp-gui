{
  "name": "yt-dlp-gui",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dlp": "node download.js",
    "dlpF": "node download-from-file.js",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.ytdlp.gui",
    "productName": "YouTube Downloader",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "YouTube Downloader"
    },
    "files": [
      "main.js",
      "index.html",
      "styles.css",
      "renderer.js",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "yt-dlp.exe",
        "to": "yt-dlp.exe"
      }
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "YouTube 视频下载工具 - 图形界面版",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "iconv-lite": "^0.7.0"
  }
}
