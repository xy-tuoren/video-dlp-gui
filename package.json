{
  "name": "neonbox-media",
  "version": "2.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "cn.neonbox.app",
    "productName": "霓虹盒子",
    "icon": "assets/icon.png",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "霓虹盒子"
    },
    "files": [
      "main.js",
      "index.html",
      "styles.css",
      "renderer.js",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "yt-dlp.exe",
        "to": "yt-dlp.exe"
      },
      {
        "from": "ffmpeg.exe",
        "to": "ffmpeg.exe"
      }
    ]
  },
  "keywords": [
    "media",
    "aggregator",
    "neonbox",
    "utility"
  ],
  "author": "",
  "license": "ISC",
  "description": "霓虹盒子：媒体聚合器与任务面板（多源整合，统一处理）",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "iconv-lite": "^0.7.0"
  }
}